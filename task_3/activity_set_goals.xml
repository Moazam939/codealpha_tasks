<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".setGoalsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:fitsSystemWindows="true"
            android:layout_gravity="center"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set your Goals here"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:ems="12"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/progree"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:background="@drawable/edtcustom"
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:inputType="text"
                android:id="@+id/edtsetgoals"
                android:layout_gravity="center_horizontal"
                android:hint="Set your Goals"
                android:ems="12"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Goals"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:id="@+id/setbtn"
                android:background="@drawable/btncustom"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>